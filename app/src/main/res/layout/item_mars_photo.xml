<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/marsPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/mars_photo_description" />

    <TextView
        android:id="@+id/marsPhotoDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earth Date: 2023-10-01"
        android:textSize="14sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/marsRoverNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rover: Curiosity"
        android:textSize="14sp"
        android:padding="8dp" />
</LinearLayout>